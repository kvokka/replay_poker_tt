<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @leaderboard.name %>
</p>

<div>
  <p>Entries:</p>
  <ol>
    <% @ranks.each do |username, score| %>
      <li><%= username %> - <%= score %></li>
    <% end -%>
  </ol>
</div>

<div>
  <%= form_with(url: leaderboard_entries_path, local: true, scope: :leaderboard_entry) do |form| %>
    <%= form.hidden_field :leaderboard_id, value: @leaderboard.id %>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, id: :leaderboard_entry_username %>
    </div>

    <div class="field">
      <%= form.label :score %>
      <%= form.number_field :score, id: :leaderboard_entry_score %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

</div>

<hr>

<%= link_to 'Edit', edit_leaderboard_path(@leaderboard) %> |
<%= link_to 'Back', leaderboards_path %>
